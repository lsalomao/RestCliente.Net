  <PropertyGroup>
  	<TargetFramework>netstandard2.1</TargetFramework>
    <RootNamespace>BlazorApp1</RootNamespace>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(TargetFramework)'!='netcoreapp3.1' ">
